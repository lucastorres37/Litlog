@model IEnumerable<Litlog.Models.Diario>

<h2>Diário de Leituras</h2>
<table class="diario-table">
    <thead>
        <tr>
            <th>Mês</th>
            <th>Dia</th>
            <th>Livro</th>
            <th>Ano</th>
            <th>Nota</th>
            <th>Curtidos</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var entry in Model)
    {
        <tr>
            <td>
                <div class="calendar-box">
                    <span class="month">@entry.DataLeitura.ToString("MMM").ToUpper()</span>
                    <span class="year">@entry.DataLeitura.Year</span>
                </div>
            </td>
            <td class="day">@entry.DataLeitura.Day</td>
            <td class="film">
                <a asp-action="Detalhes" asp-route-id="@entry.Livro.Id">
                    <img src="@entry.Livro.CapaUrl" alt="Capa" class="cover-img" />
                    <span class="book-title">@entry.Livro.Titulo</span>
                </a>
            </td>
            <td>@entry.Livro.Ano</td>
            <td>
                @for (int i = 1; i <= 5; i++)
                {
                    if (entry.Nota.HasValue && entry.Nota.Value >= i)
                    {
                        <span class="star">&#9733;</span> <!-- estrela preenchida -->
                    }
                    else if (entry.Nota.HasValue && entry.Nota.Value >= i - 0.5)
                    {
                        <span class="star">&#9734;</span> <!-- estrela meia, pode usar ícone personalizado -->
                    }
                    else
                    {
                        <span class="star">&#9734;</span> <!-- estrela vazia -->
                    }
                }
            </td>
            <td>
                <span class="like-heart @(entry.Liked ? "liked" : "")">&#10084;</span>
            </td>
        </tr>
    }
    </tbody>
</table>