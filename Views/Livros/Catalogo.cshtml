@model List<Litlog.Models.Livro>


<h2>Catálogo de Livros</h2>

<form method="get" class="mb-4">
    <input type="text" name="termo" placeholder="Buscar livro..." class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Buscar</button>
</form>

<div class="grid-container">
    @for (int i = 0; i < Math.Min(50, Model.Count); i++)
    {
        var livro = Model[i];
        <div class="grid-item">
            <div class="capa-wrapper">
                <a asp-action="Detalhes" asp-route-id="@livro.Id">
                    <img src="@livro.CapaUrl" alt="@livro.Titulo" class="livro-capa" />
                </a>
            </div>
            <button type="button" class="btn btn-success mt-2 w-100" data-bs-toggle="modal" data-bs-target="#logarModal-@livro.Id">
                Review ou Log
            </button>
            <!-- Pop-up de log -->
            <div class="modal fade" id="logarModal-@livro.Id" tabindex="-1" aria-labelledby="logarModalLabel-@livro.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="LogarLivroLido" asp-controller="Livros" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="logarModalLabel-@livro.Id">Logar leitura</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="livroId" value="@livro.Id" />
                                <div class="mb-3">
                                    <label for="nota-@livro.Id" class="form-label">Nota (opcional)</label>
                                    <input type="number" step="0.5" min="0" max="5" class="form-control" id="nota-@livro.Id" name="nota" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Salvar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

<link rel="stylesheet" href="~/css/dark-letterboxd.css" />


<style>
    html {
        scroll-behavior: smooth;
        background: #181818;
    }

    body {
        background: #181818;
        color: #e1e1e1;
        font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
    }

    a,
    .btn,
    button {
        color: #3399ff;
        background: none;
        border: none;
        transition: color 0.2s;
    }

    a:hover,
    .btn:hover,
    button:hover {
        color: #66ccff;
    }

    h2 {
        color: #00b300;
    }

    .form-control {
        background: #232323;
        color: #e1e1e1;
        border: 1px solid #393939;
    }

    .btn-primary {
        background: #00b300;
        color: #181818;
        border: none;
        font-weight: bold;
    }

    .btn-primary:hover {
        background: #53ff53;
        color: #181818;
    }

    .livro-capa {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border: 3px solid #00b300;
        border-radius: 8px;
        transition: opacity 0.3s ease;
        box-shadow: 0 2px 6px #000a;
        background: #222;
    }

    .livro-capa:hover {
        opacity: 0.6;
        cursor: pointer;
        border-color: #53ff53;
    }

    .capa-wrapper {
        display: block;
        width: 100%;
        max-width: 160px;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 15px;
        padding: 10px;
    }

    .grid-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 5px;
    }

    .livro-detalhes-container,
    .livro-info,
    .comentarios-section {
        background: #222;
        border-radius: 8px;
        box-shadow: 0 2px 8px #000a;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .livro-capa-detalhe,
    .livro-capa {
        border: 2px solid #3399ff;
        background: #222;
    }

    textarea {
        background: #181818;
        color: #e1e1e1;
        border: 1px solid #393939;
        border-radius: 4px;
        padding: 0.5rem;
    }

    .comentario {
        background: #232323;
        border-left: 4px solid #3399ff;
        margin-bottom: 1rem;
        padding: 0.75rem;
        border-radius: 4px;
    }

    h1,
    h2,
    h3 {
        color: #3399ff;
    }

    button,
    .btn-primary {
        background: #3399ff;
        color: #181818;
        border-radius: 4px;
        padding: 0.5rem 1rem;
        font-weight: bold;
        cursor: pointer;
        border: none;
    }

    button:hover,
    .btn-primary:hover {
        background: #66ccff;
        color: #181818;
    }
</style>